/* pages/roomList/roomList.wxss */
/* 最大的盒子 */
.room{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.roo_in{
  display: flex;
  margin-top: 15rpx;
  margin-left: 15rpx;
  margin-right: 10rpx;
  flex-direction: row;
}
.room_img{
  width: 200rpx;
  height: 200rpx;
}
/* 图片 */
.image{
  margin-left: 12%;
  width: 200rpx;
  height: 200rpx;
  margin-top: 6%;
}
/* 图片旁文字 */
.text1{
  margin-left: -3%;
  margin-top: -3%;
  width: 50%;
  height: 260rpx;
}
/* 万象城c座标题 */
#title{
  font-size: 28rpx;
  width: 400rpx;
  height: 40rpx;
  margin-left: 80rpx;
  margin-top: 8%;
}
/* 图标 */
.icon{
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  margin-left: -5rpx;
  margin-top: 15rpx;
}
/* 图标加文字 */
.plusicon{
  width: 460rpx;
  margin-left: 17%;
  margin-top: 5rpx;
  font-size: 25rpx;
  height: 45rpx;
  display: flex;
  color: gray;  
}
/* 文字 */
.plusicon view{
  margin-left: 20rpx;
  margin-top: 19rpx;
}

/* 付款 */
.payment{
  width: 50%;
  display: flex;
  justify-content: space-between;
  color: #ff7a69;
  font-size: 26rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin-left: 5%;
}
/*备注  */
.remarks{
    margin-left: 15rpx;
    font-weight: 700;
    font-size: 26rpx;
    display: flex;
  border-bottom: 1px solid #eee;
  padding-bottom:10rpx; 
}
.done{
  color:rgb(240, 195, 128);
}
.wait{
  color: #ff7a69;
}
.have{
  color: lightblue;
}
/* 右侧图标 */
.righticon{
  float: right;
  width: 40rpx;
  height: 40rpx;
  margin-top: 10%;
}
/* 分割线 */
.divLine{
 background: #fe8b7d;
 width: 90%;
 height: 3rpx;
 margin: 0 auto;
}
.right{
  margin-top: 5%;
  font-size: 26rpx;
  color: #fe8b7d;
  margin-left: 10%;
}
.righticon{
  width: 30rpx;
  height: 30rpx;
  margin-left: -4%;
  margin-top: 12%;
  position: absolute;
}
.none{
  margin: 20% auto;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  color: #fe8b7d;
}
.none image{
  width: 500rpx;
  height: 400rpx;
}