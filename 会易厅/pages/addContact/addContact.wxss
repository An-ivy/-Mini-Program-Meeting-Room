
/* pages/own/own.wxss */
/* 最大盒子 */
#own{
  display: flex;
  flex-direction: column;
  width: 100%;
  justify-content: center;
}
/* 内容 */
.usercontent{
  display: flex;
  flex-direction: row;
  height: 80rpx;
  justify-content: space-between;
  align-items: center;
}
/* 标题 */
.usercontent label{
  font-size: 30rpx;
  width: 200rpx;
  
}
.textment{
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
input{
  font-size: 28rpx;
  text-align: right;
  display: flex;
  justify-content: flex-end;
}
/* 单选 */
.radio-group{
  font-size: 28rpx;
  width: 300rpx; 
  text-align: right;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-right: 1.5%;
}
.radio-group label{
  width: 100rpx;
  display: flex;
  align-items: center;
  flex-direction: row; 
  font-size: 28rpx;
}
radio{
   width: 100rpx;
   display: flex;
   flex-direction: row; 
   padding-left: 20rpx;
   align-items: center;
}
#outercon{
  margin-top: 10%;
  margin-left: 10%;
  margin-right: 10%;
  display: flex;
  flex-direction: column;
}
/* 关闭按钮 */
.closeicon{
  width: 40rpx;
  height: 40rpx;
}
.addmanbtn{
  width: 60%;
  height: 80rpx;
  background-color: #ff8c7e;
  color: white;
  border-radius: 50rpx;
  margin-top: 10%;
  font-size: 30rpx;
  line-height: 80rpx;
  font-weight: bold;
}