/* pages/orderstatus/orderstatus.wxss */
page{
  background-color: #fe8b7d;
}
/* 最大盒子 */
.bigger{
  width: 98%;
  margin: 0 auto;
}
/* 组件盒子 */
.statuscontent{
  background-color:white;
  margin: 20rpx;
  border-radius: 5rpx;
}
/* 状态 */
.statustitle{
  display: flex;
  flex-direction: column;
  text-align: center;
  color: white;
  font-size: 25rpx;
  font-weight: bold;
}
.statustitle button{
  width: 150rpx;
  height: 50rpx;
  background-color: white;
  color: #fe8b7d;
  border-radius: 50rpx;
  font-size: 30rpx;
  line-height: 50rpx;
  text-align: center;
  font-weight: bold;
}
.statustitle text{
  margin-bottom: 20rpx;
}
.stitle{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
#right{
  width: 30rpx;
  height: 30rpx;
  padding:15rpx;
}
.roomstatus{
  display: flex;
  flex-direction: column;
  font-size: 25rpx;
  height: 70rpx;
  justify-content: space-around;
  padding: 20rpx;
}
/* 分割线 */
.divLine{
 background: #f0f0f0;
 width: 100%;
 height: 3rpx;
 margin: 0 auto;
}
/* 订单状态 */
#orderst{
  margin-left: 10%;
}
/* 订单详情和发票详情标题行 */
.orderstatus{
  display: flex;
  flex-direction: column;
  height: 40rpx;
  justify-content: space-around;
  padding: 20rpx;
}
/* 标题 */
.titlebigger{
  font-size: 30rpx;
}
/* 支付行 */
.payline{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.paymoney{
  display: flex;
  flex-direction: row;
}
/* 订单明细按钮 */
.payline button{
  width: 120rpx;
  height: 50rpx;
  padding: 0;
  background-color:#fe8b7d;
  color: white;
  font-size: 20rpx; 
  border-radius: 50rpx;
}
/* 已支付 */
#havepayprice{
  color: #fe8b7d;
}
/* 订单详情内容 */
.ordercontent{
  font-size: 25rpx;
  justify-content: space-around;
  padding: 10rpx 20rpx;
}
/* 紧急密码 */
#urgentpassword{
  font-size: 30rpx;
  color: #fe8b7d;
  padding: 10rpx 20rpx;
}
/* 发票 */
#invoice{
  height: 280rpx;
}
/* 弹出层 */
.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.7;
}
.modalDlg{
    width: 400rpx;
    height:400rpx;
    position: fixed;
    padding: 20rpx;
    top: 50%;
    left:13%;
    z-index: 9999;
    margin: -370rpx 85rpx;
    background-color: #fff;
    border-radius: 36rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}
/* 订单详情 */
.modaltitle{
  height: 80rpx;
  font-size: 35rpx;
  color: #fe8b7d;
}
#modaldivLine{
  width: 100%;
  height: 2rpx;
  background-color: #fe8b7d;
}
/* 关闭按钮 */
#closepic{
  width: 50rpx;
  height: 56rpx;
  margin-left: 80%;
}
#modalcontent{
  height: 200rpx;
  color: black;
  font-size: 25rpx;
  margin-top: 20rpx;
  margin-left: -65%;
}
.modalbtns{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 80%;
  margin-bottom: 10%;
}
/* 取消确认 */
.modalbtns button{
  width: 100rpx;
  height: 50rpx;
  background-color: #fe8b7d;
  color: white;
  font-size: 25rpx;
}
